- unless @cat.has_auction?
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Place your bid
    .panel-body
      = form_for [@cat, Auction.new] do |f|
        .form-group
          .field
            = f.text_field :value, placeholder: "Place your bid", class: 'form-control'
        .form-group
          .actions
            = f.submit 'Place bid', class: 'btn btn-primary btn-lg btn-block'
