- unless @cat.has_auction?
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Place your bid
    .panel-body
      = form_for [@cat, Auction.new] do |f|
        .form-group
          .field
            = f.text_field :value, placeholder: "Place your bid", class: 'form-control'
        .form-group
          .form-inline
            .form-group
              = f.datetime_select :ends_at, {with_css_classes: true}, {class: "form-control"}
        .form-group
          .actions
            = f.submit 'Create auction', class: 'btn btn-primary btn-lg btn-block'
